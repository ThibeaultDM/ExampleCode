<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:ModuleCustomer" x:Class="ModuleCustomer.CustomerView"
             prism:ViewModelLocator.AutoWireViewModel="True" Height="350" Width="400">
    <Grid>

        <local:CustomerView Foreground="Black" Background="White" Loaded="CustomerView_Loaded">
            <local:CustomerView.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" />
                    <GradientStop Color="#FFF3ECEC" Offset="1" />
                </LinearGradientBrush>
            </local:CustomerView.OpacityMask>
        </local:CustomerView>
    </Grid>
</UserControl>